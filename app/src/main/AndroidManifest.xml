<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.hse.guidehelper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GuideHelper"
        android:usesCleartextTraffic="true">
        <activity android:name=".chat.DialogsActivity" />

        <activity
            android:name=".excursions.ExcursionsListListActivity"
            android:label="@string/title_excursionslist_list"
            android:theme="@style/Theme.GuideHelper.NoActionBar"></activity>
        <activity
            android:name=".excursions.ExcursionsListDetailActivity"
            android:label="@string/title_excursionslist_detail"
            android:parentActivityName=".excursions.ExcursionsListListActivity"
            android:theme="@style/Theme.GuideHelper.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.hse.guidehelper.excursions.ExcursionsListListActivity" />
        </activity>
        <activity android:name=".auth.ProfileActivity" />
        <activity android:name=".auth.SignInActivity" />
      
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>